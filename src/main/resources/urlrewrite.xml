<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE urlrewrite
        PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<urlrewrite>
    <rule>
        <name>https redirect</name>
        <condition name="x-forwarded-proto" operator="notequal">^https$</condition>
        <from>^/(.*)</from>
        <to type="permanent-redirect" last="true">https://www.xgst.in/$1</to>
    </rule>
    <rule>
        <name>Domain Name Check</name>
        <condition name="host" operator="notequal">www.xgst.in</condition>
        <from>^(.*)$</from>
        <to type="permanent-redirect" last="true">https://www.xgst.in$1</to>
    </rule>
    <rule>
        <name>sections to services/sections</name>
        <from>^/sections/(.*)$</from>
        <to type="permanent-redirect">/services/sections/$1</to>
    </rule>
</urlrewrite>